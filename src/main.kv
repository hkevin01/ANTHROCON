<ScreenManagement>:
    LoginScreen:
    HomeScreen:

<LoginScreen>:
    name: 'login'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Login Screen'
        Button:
            text: 'Go to Home'
            on_press:
                root.manager.current = 'home'

<HomeScreen>:
    name: 'home'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Home Screen'
        Button:
            text: 'Go to Login'
            on_press:
                root.manager.current = 'login'